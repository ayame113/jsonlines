{
  "tasks": {
    "test": "deno test --allow-read=. --doc --ignore=./js/mod.js",
    "test:coverage": "deno task test --coverage=coverage",
    "test:lint": "deno lint",
    "test:fmt": "deno fmt --check",
    "fmt": "deno fmt",
    "check": "deno check ./mod.ts",
    "transpile": "deno run --allow-read=. --allow-write=. ./dev/transpile.ts && deno task test"
  },
  "lint": {
    "files": {
      "exclude": ["./js/"]
    }
  },
  "fmt": {
    "files": {
      "exclude": ["./js/"]
    }
  }
}
